<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="?attr/actionBarSize">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/log_pane">
                <ListView
                    android:id="@+id/log"
                    android:background="@color/logAndGraphBackground"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:divider="@null"
                    android:dividerHeight="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:gravity="center"
                    android:id="@+id/empty"
                    android:background="@color/logAndGraphBackground"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="@string/log_empty"
                    android:layout_weight="1"/>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:background="@drawable/ab_solid_light_holo"
                    android:paddingLeft="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize">
                    <androidx.appcompat.widget.AppCompatSpinner
                        android:entries="@array/log_levels"
                        android:id="@+id/log_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <Space
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>
                    <ImageButton
                        android:id="@+id/action_copy"
                        android:layout_width="?attr/actionBarSize"
                        android:layout_height="?attr/actionBarSize"
                        style="@style/Widget.IconButton.Copy"/>
                    <ImageButton
                        android:id="@+id/action_save"
                        android:layout_width="?attr/actionBarSize"
                        android:layout_height="?attr/actionBarSize"
                        style="@style/Widget.IconButton.Save"/>
                    <ImageButton
                        android:id="@+id/action_share"
                        android:layout_width="?attr/actionBarSize"
                        android:layout_height="?attr/actionBarSize"
                        style="@style/Widget.IconButton.Share"/>
                    <ImageButton
                        android:id="@+id/action_remove"
                        android:layout_width="?attr/actionBarSize"
                        android:layout_height="?attr/actionBarSize"
                        style="@style/Widget.IconButton.Delete"/>
                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/shadow"
                android:scaleType="fitXY"
                android:layout_toLeftOf="@+id/log_pane"/>
            <FrameLayout
                android:id="@+id/log_pane"
                android:background="@color/backgroundColor"
                android:layout_width="512dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@android:id/list"
                    android:paddingBottom="@dimen/fab_recycler_view_padding"
                    android:clipToPadding="false"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <ProgressBar
                    android:layout_gravity="center"
                    android:id="@+id/busy"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?android:attr/progressBarStyle"/>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@+id/dfu_progress_container"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <include
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dfu_graph_height"
                        layout="@layout/dfu_graph"/>
                    <TextView
                        android:textSize="24sp"
                        android:id="@+id/progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:freezesText="true"/>
                </LinearLayout>
            </FrameLayout>
        </RelativeLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/device_toolbox"
            android:paddingLeft="@dimen/service_margin_left"
            android:paddingRight="@dimen/service_margin_right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.DeviceToolbox">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="?attr/actionBarSize"
                android:layout_weight="1">
                <TextView
                    android:textStyle="bold"
                    android:textColor="?attr/colorPrimaryVariant"
                    android:id="@+id/connection_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/status_connecting_to_service"
                    android:freezesText="true"/>
                <TextView
                    android:textColor="?attr/colorPrimaryVariant"
                    android:id="@+id/bond_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/status_not_bonded"
                    android:freezesText="true"/>
            </LinearLayout>
            <ProgressBar
                android:layout_gravity="center_vertical"
                android:id="@+id/action_in_progress"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                style="?android:attr/progressBarStyleSmall"/>
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tab_layout"
                android:background="@android:color/transparent"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:tabIndicatorColor="?attr/colorPrimaryVariant"
                app:tabIndicatorHeight="3dp"
                app:tabSelectedTextColor="?attr/colorPrimaryVariant"
                app:tabTextColor="@color/gray"/>
            <ImageButton
                android:id="@+id/action_more"
                android:visibility="gone"
                android:layout_width="36dp"
                android:layout_height="match_parent"
                style="@style/Widget.IconButton.Overflow"/>
        </LinearLayout>
    </RelativeLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_gravity="bottom|right"
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/fab_ic_recordings"
        app:backgroundTint="@color/fab"
        app:elevation="4dp"/>
    <include
        android:layout_gravity="top|right"
        android:id="@+id/bottom_sheet"
        android:layout_width="512dp"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/bottom_sheet_behavior"
        layout="@layout/macros_bottom_sheet"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
