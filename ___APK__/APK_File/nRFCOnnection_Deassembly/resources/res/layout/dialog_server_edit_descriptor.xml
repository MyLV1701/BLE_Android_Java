<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:paddingLeft="@dimen/alert_dialog_padding"
        android:paddingTop="@dimen/alert_dialog_padding_top"
        android:paddingRight="@dimen/alert_dialog_padding"
        android:paddingBottom="@dimen/alert_dialog_padding_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/server_alert_characteristic_name_hint"
                android:layout_weight="1">
                <AutoCompleteTextView
                    android:id="@+id/display_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:lines="1"
                    android:inputType="textCapWords"
                    android:imeOptions="flagNoFullscreen|actionNext"/>
            </com.google.android.material.textfield.TextInputLayout>
            <ImageButton
                android:id="@+id/action_clear_name"
                style="@style/Widget.IconButton.Clear"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/server_alert_characteristic_uuid_hint"
                android:layout_weight="1">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/uuid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:lines="1"
                    android:inputType="textCapCharacters"
                    android:imeOptions="flagNoFullscreen|actionDone"/>
            </com.google.android.material.textfield.TextInputLayout>
            <ImageButton
                android:id="@+id/action_clear_uuid"
                style="@style/Widget.IconButton.Clear"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">
            <TextView
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/server_alert_permission"
                android:layout_weight="1"/>
            <CheckBox
                android:id="@+id/action_expand_permissions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/ic_action_expand_collapse"/>
        </LinearLayout>
        <CheckBox
            android:id="@+id/permission_read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/server_permission_read"/>
        <CheckBox
            android:id="@+id/permission_read_encrypted"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/server_permission_read_encrypted"/>
        <CheckBox
            android:id="@+id/permission_read_encrypted_mitm"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/server_permission_read_encrypted_mitm"/>
        <CheckBox
            android:id="@+id/permission_write"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/server_permission_write"/>
        <CheckBox
            android:id="@+id/permission_write_encrypted"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/server_permission_write_encrypted"/>
        <CheckBox
            android:id="@+id/permission_write_encrypted_mitm"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/server_permission_write_encrypted_mitm"/>
        <CheckBox
            android:id="@+id/permission_write_signed"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/server_permission_write_signed"/>
        <CheckBox
            android:id="@+id/permission_write_signed_mitm"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/server_permission_write_signed_mitm"/>
        <TextView
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/server_alert_value"/>
        <RadioButton
            android:id="@+id/option_value_empty"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:checked="true"
            android:text="@string/server_alert_value_empty_hint"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:layout_gravity="center_vertical"
                android:id="@+id/option_value_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/server_alert_value_text_hint"
                android:layout_weight="1">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/value_string"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:lines="1"
                    android:imeOptions="flagNoFullscreen|actionDone"/>
            </com.google.android.material.textfield.TextInputLayout>
            <ImageButton
                android:id="@+id/action_clear_value_string"
                style="@style/Widget.IconButton.Clear"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:layout_gravity="center_vertical"
                android:id="@+id/option_value_bytes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="18sp"
                android:gravity="bottom"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="@string/alert_prefix_byte"/>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/server_alert_value_bytes_hint"
                android:layout_weight="1">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:lines="1"
                    android:inputType="textCapCharacters"
                    android:imeOptions="flagNoFullscreen|actionDone"/>
            </com.google.android.material.textfield.TextInputLayout>
            <ImageButton
                android:id="@+id/action_clear_value"
                android:layout_marginLeft="8dp"
                style="@style/Widget.IconButton.Clear"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
