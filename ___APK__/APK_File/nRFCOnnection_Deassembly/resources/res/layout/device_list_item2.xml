<?xml version="1.0" encoding="utf-8"?>
<no.nordicsemi.android.mcp.widget.scanner.DeviceView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/list_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:importantForAccessibility="no">
    <no.nordicsemi.android.mcp.widget.ForegroundRelativeLayout
        android:id="@+id/device_main"
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:importantForAccessibility="no"
        app:foreground="?android:attr/selectableItemBackground">
        <ImageView
            android:id="@+id/favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/device_fav_margin_left"
            android:layout_marginTop="@dimen/device_fav_margin_top"
            android:src="@drawable/ic_favorite"
            android:layout_below="@+id/icon_background"
            android:importantForAccessibility="no"/>
        <View
            android:id="@+id/icon_background"
            android:background="@drawable/ic_device_bg"
            android:layout_width="@dimen/device_icon_size"
            android:layout_height="@dimen/device_icon_size"
            android:layout_marginLeft="@dimen/device_margin_left"
            android:layout_marginTop="@dimen/device_margin_top"
            android:layout_marginRight="@dimen/device_icon_margin_right"
            android:importantForAccessibility="no"/>
        <ImageView
            android:id="@+id/icon_hover"
            android:layout_width="@dimen/device_icon_size"
            android:layout_height="@dimen/device_icon_size"
            android:layout_marginLeft="@dimen/device_margin_left"
            android:layout_marginTop="@dimen/device_margin_top"
            android:layout_marginRight="@dimen/device_icon_margin_right"
            android:src="@drawable/ic_device_bg_hover"
            android:alpha="1"
            android:importantForAccessibility="no"/>
        <ImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/device_icon_size"
            android:layout_height="@dimen/device_icon_size"
            android:layout_marginLeft="@dimen/device_margin_left"
            android:layout_marginTop="@dimen/device_margin_top"
            android:layout_marginRight="@dimen/device_icon_margin_right"
            android:scaleType="center"
            android:importantForAccessibility="no"/>
        <TableLayout
            android:id="@+id/names"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/device_margin_top"
            android:layout_marginRight="8dp"
            android:shrinkColumns="1"
            android:layout_toLeftOf="@+id/action_connect"
            android:layout_toRightOf="@+id/icon">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textAppearance="?android:attr/textAppearanceListItemSmall"
                    android:ellipsize="middle"
                    android:id="@+id/display_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:importantForAccessibility="no"
                    android:fontFamily="sans-serif-medium"/>
                <TextView
                    android:textAppearance="?android:attr/textAppearanceListItemSmall"
                    android:textColor="@color/gray"
                    android:ellipsize="end"
                    android:id="@+id/name_secondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:singleLine="true"
                    android:importantForAccessibility="no"
                    android:fontFamily="sans-serif-medium"/>
            </TableRow>
        </TableLayout>
        <TextView
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/icon"
            android:layout_below="@+id/names"
            android:importantForAccessibility="no"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/icon"
            android:layout_below="@+id/address"
            android:importantForAccessibility="no">
            <TextView
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/bondState"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:importantForAccessibility="no"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/rssi"
                android:layout_width="84dp"
                android:layout_height="wrap_content"
                android:drawablePadding="2dp"
                android:importantForAccessibility="no"
                app:drawableLeftCompat="@drawable/ic_signal"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/adv_interval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="2dp"
                android:importantForAccessibility="no"
                app:drawableLeftCompat="@drawable/ic_signal_interval"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/action_connect"
            android:background="@drawable/connect_button"
            android:paddingLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginRight="@dimen/device_margin_right"
            android:layout_alignParentRight="true"
            android:importantForAccessibility="no"
            style="@style/Widget.ConnectButton">
            <TextView
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/action_connect"
                android:layout_weight="1"
                android:importantForAccessibility="no"/>
            <ImageButton
                android:id="@+id/action_connect_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:importantForAccessibility="no"
                style="@style/Widget.IconButton.Overflow.Connect"/>
        </LinearLayout>
        <Button
            android:id="@+id/action_open"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginRight="@dimen/device_margin_right"
            android:text="@string/action_open_tab"
            android:layout_alignParentRight="true"
            android:importantForAccessibility="no"
            style="@style/Widget.OpenButton"/>
    </no.nordicsemi.android.mcp.widget.ForegroundRelativeLayout>
    <no.nordicsemi.android.mcp.widget.scanner.DeviceDetailsView
        android:orientation="vertical"
        android:id="@+id/device_details"
        android:paddingLeft="@dimen/device_content_margin_left"
        android:paddingRight="@dimen/device_margin_right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:importantForAccessibility="no">
        <include layout="@layout/device_list_child_item2"/>
        <include layout="@layout/device_list_child_item2"/>
        <include layout="@layout/device_list_child_item2"/>
        <include layout="@layout/device_list_child_item2"/>
        <include layout="@layout/device_list_child_item2"/>
        <include layout="@layout/device_list_child_item2"/>
        <include layout="@layout/device_list_child_item2"/>
        <include layout="@layout/device_list_child_item2"/>
        <include layout="@layout/device_list_child_item2"/>
        <include layout="@layout/device_list_child_item2"/>
        <include layout="@layout/device_list_child_item2"/>
        <LinearLayout
            android:gravity="top|right"
            android:orientation="horizontal"
            android:id="@+id/device_actions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:importantForAccessibility="no"
            style="?android:attr/buttonBarStyle">
            <Button
                android:id="@+id/action_visit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:text="@string/action_open_uri"
                android:importantForAccessibility="no"
                style="?attr/buttonBarButtonStyle"/>
            <Button
                android:id="@+id/action_clone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/action_clone"
                android:importantForAccessibility="no"
                style="?attr/buttonBarButtonStyle"/>
            <Button
                android:id="@+id/action_raw_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/action_raw"
                android:importantForAccessibility="no"
                style="?attr/buttonBarButtonStyle"/>
            <Button
                android:id="@+id/action_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:text="@string/action_more"
                android:importantForAccessibility="no"
                style="?attr/buttonBarButtonStyle"/>
        </LinearLayout>
    </no.nordicsemi.android.mcp.widget.scanner.DeviceDetailsView>
</no.nordicsemi.android.mcp.widget.scanner.DeviceView>
