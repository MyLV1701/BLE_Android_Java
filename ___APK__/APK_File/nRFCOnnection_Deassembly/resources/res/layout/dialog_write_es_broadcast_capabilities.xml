<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:paddingLeft="@dimen/alert_dialog_padding"
        android:paddingTop="@dimen/alert_dialog_padding_top"
        android:paddingRight="@dimen/alert_dialog_padding"
        android:paddingBottom="@dimen/alert_dialog_padding_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/version_byte_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/version_byte"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/eddystone_version_byte"
                android:layout_weight="1"
                android:inputType="number"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/eddystone_uint8"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/max_slots_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/max_slots"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/eddystone_max_supported_total_slots"
                android:layout_weight="1"
                android:inputType="number"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/eddystone_uint8"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/eid_slots_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/eid_slots"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/eddystone_max_supported_eid_slots"
                android:layout_weight="1"
                android:inputType="number"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/eddystone_uint8"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/select_capabilities"/>
        <CheckBox
            android:id="@+id/variable_adv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="@string/eddystone_variable_advertising_supported"/>
        <CheckBox
            android:id="@+id/variable_tx_power"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="@string/eddystone_variable_tx_power_supported"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/supported_frame_type"/>
        <CheckBox
            android:id="@+id/frame_type_uid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="@string/eddystone_frame_uid"/>
        <CheckBox
            android:id="@+id/frame_type_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="@string/eddystone_frame_url"/>
        <CheckBox
            android:id="@+id/frame_type_tlm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="@string/eddystone_frame_tlm"/>
        <CheckBox
            android:id="@+id/frame_type_eid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="@string/eddystone_frame_eid"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/tx_power_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/variable_tx_power_values"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/eddystone_variable_tx_power_supported_commas"
                android:singleLine="true"
                android:layout_weight="1"
                android:inputType="text"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/eddystone_dbm"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
