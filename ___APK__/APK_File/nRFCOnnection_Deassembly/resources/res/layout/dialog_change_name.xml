<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingLeft="@dimen/alert_dialog_padding"
    android:paddingTop="@dimen/alert_dialog_padding_top"
    android:paddingRight="@dimen/alert_dialog_padding"
    android:paddingBottom="@dimen/alert_dialog_padding_bottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true">
    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/display_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/alert_change_name_hint"
            android:maxLines="1"
            android:layout_weight="1"
            android:inputType="textCapWords"
            android:imeOptions="flagNoFullscreen"/>
        <ImageButton
            android:id="@+id/action_clear"
            style="@style/Widget.IconButton.Clear"/>
    </LinearLayout>
    <RadioGroup
        android:orientation="horizontal"
        android:id="@+id/format"
        android:layout_width="wrap_content"
        android:layout_height="35dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/alert_change_name_format_text"/>
        <RadioButton
            android:id="@+id/format_none"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/format_none"/>
        <RadioButton
            android:id="@+id/format_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/format_text"/>
    </RadioGroup>
    <TextView
        android:textSize="14sp"
        android:textColor="@color/gray"
        android:id="@+id/info"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/alert_change_name_info"/>
</LinearLayout>
