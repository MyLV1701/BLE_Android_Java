<?xml version="1.0" encoding="utf-8"?>
<no.nordicsemi.android.mcp.widget.connection.DescriptorView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:gravity="top|left"
                android:id="@+id/display_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/uuid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <ImageButton
            android:layout_gravity="top"
            android:id="@+id/action_read"
            style="@style/Widget.IconButton.Operation.Read"/>
        <ImageButton
            android:layout_gravity="top"
            android:id="@+id/action_write"
            style="@style/Widget.IconButton.Operation.Write"/>
        <ImageButton
            android:layout_gravity="top"
            android:id="@+id/action_set_value"
            style="@style/Widget.IconButton.Operation.SetValue"/>
    </LinearLayout>
    <TextView
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</no.nordicsemi.android.mcp.widget.connection.DescriptorView>
