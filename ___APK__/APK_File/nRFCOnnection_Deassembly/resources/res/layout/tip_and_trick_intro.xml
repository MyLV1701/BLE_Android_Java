<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/tips_card_margin"
    android:layout_marginStart="@dimen/tips_card_margin_half"
    android:layout_marginEnd="@dimen/tips_card_margin_half"
    app:cardCornerRadius="8dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        style="?attr/buttonBarStyle">
        <com.google.android.material.appbar.AppBarLayout
            android:background="@color/dialogActionBarColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_actionbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:logo="@drawable/ic_nav_tips_and_tricks"
                app:titleMarginStart="30dp"/>
        </com.google.android.material.appbar.AppBarLayout>
        <ImageView
            android:id="@+id/image"
            android:background="@color/listBackgroundSelected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="@drawable/shadow_bottom"
            android:scaleType="centerInside"
            android:minHeight="140dp"/>
        <TextView
            android:textSize="16sp"
            android:id="@+id/text"
            android:padding="@dimen/tips_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
