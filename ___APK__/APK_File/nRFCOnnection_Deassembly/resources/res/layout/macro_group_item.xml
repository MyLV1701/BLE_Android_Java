<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/listRemovableBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <no.nordicsemi.android.mcp.widget.ForegroundRelativeLayout
        android:gravity="center_vertical"
        android:id="@+id/removable"
        android:background="@color/listBackgroundNormal"
        android:paddingLeft="8dp"
        android:paddingRight="16dp"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:foreground="?android:attr/selectableItemBackground">
        <ImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/device_icon_size"
            android:layout_height="@dimen/device_icon_size"
            android:src="@drawable/ic_macro_group"
            android:scaleType="center"
            android:layout_centerVertical="true"/>
        <TextView
            android:textSize="16sp"
            android:ellipsize="end"
            android:id="@+id/display_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="2dp"
            android:lines="1"
            android:layout_toLeftOf="@+id/action_more"
            android:layout_toRightOf="@+id/icon"/>
        <TextView
            android:textSize="12sp"
            android:textColor="?android:attr/textColorSecondary"
            android:ellipsize="end"
            android:id="@+id/details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:lines="1"
            android:layout_toLeftOf="@+id/action_more"
            android:layout_toRightOf="@+id/icon"
            android:layout_below="@+id/display_name"/>
        <ImageButton
            android:id="@+id/action_more"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            style="@style/Widget.IconButton.Overflow"/>
    </no.nordicsemi.android.mcp.widget.ForegroundRelativeLayout>
</FrameLayout>
