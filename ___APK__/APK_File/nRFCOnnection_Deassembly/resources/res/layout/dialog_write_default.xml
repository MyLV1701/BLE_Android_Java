<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/tab_new_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/message"
            android:paddingTop="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/alert_dialog_padding"
            android:layout_marginRight="@dimen/alert_dialog_padding"
            android:text="@string/alert_parsing_disabled"
            android:drawableLeft="@drawable/ic_small_warning"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@android:id/list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <EditText
            android:id="@+id/display_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/alert_dialog_padding"
            android:layout_marginTop="6dp"
            android:layout_marginRight="@dimen/alert_dialog_padding"
            android:hint="@string/alert_name_hint"
            android:maxLength="16"
            android:inputType="textCapSentences"
            android:imeOptions="flagNoExtractUi"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/tab_saved_content"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ListView
            android:id="@android:id/list"
            android:background="@color/listRemovableBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@null"
            android:choiceMode="singleChoice"
            android:minHeight="127dp"/>
        <TextView
            android:gravity="center"
            android:id="@android:id/empty"
            android:layout_width="match_parent"
            android:layout_height="127dp"
            android:text="@string/alert_saved_empty"/>
    </LinearLayout>
</FrameLayout>
