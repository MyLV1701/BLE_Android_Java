<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:paddingLeft="@dimen/alert_dialog_padding"
        android:paddingTop="@dimen/alert_dialog_padding_top"
        android:paddingRight="@dimen/alert_dialog_padding"
        android:paddingBottom="@dimen/alert_dialog_padding_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_lock_state"/>
        <Spinner
            android:entries="@array/eddystone_lock_states"
            android:id="@+id/frame_types"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/title_old_lock_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/eddystone_old_lock_code"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/old_lock_code_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/old_lock_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/lock_code_length"
                android:singleLine="false"
                android:layout_weight="1"
                android:inputType="text"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/eddystone_byte_array"/>
        </LinearLayout>
        <TextView
            android:id="@+id/title_new_lock_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/eddystone_new_lock_code"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/new_lock_code_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/new_lock_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/lock_code_length"
                android:singleLine="false"
                android:layout_weight="1"
                android:inputType="text"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/eddystone_byte_array"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
