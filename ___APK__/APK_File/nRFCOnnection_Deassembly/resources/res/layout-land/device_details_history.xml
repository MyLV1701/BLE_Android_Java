<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foreground="@drawable/action_bar_shadow">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:background="@color/logAndGraphBackground"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">
            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/graph_not_available"/>
            <include
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                layout="@layout/history_graph"/>
        </FrameLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@android:id/list"
            android:background="@drawable/white_list_background"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"/>
    </LinearLayout>
</FrameLayout>
