<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    android:versionCode="110"
    android:versionName="4.24.0"
    android:installLocation="auto"
    android:compileSdkVersion="29"
    android:compileSdkVersionCodename="10"
    package="no.nordicsemi.android.mcp"
    platformBuildVersionCode="29"
    platformBuildVersionName="10">
    <uses-sdk
        android:minSdkVersion="18"
        android:targetSdkVersion="29"/>
    <permission
        android:label="@string/permission_log_label"
        android:icon="@drawable/ic_permission_log"
        android:name="no.nordicsemi.android.LOG"
        android:description="@string/permission_log_description"/>
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>
    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="no.nordicsemi.android.LOG"/>
    <application
        android:theme="@style/AppTheme.NormalStatusBar"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:name="no.nordicsemi.android.mcp.MainApplication"
        android:allowBackup="true"
        android:supportsRtl="false"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory">
        <activity
            android:name="no.nordicsemi.android.mcp.DeviceListActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
            <intent-filter android:icon="@drawable/ic_feature">
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="no.nordicsemi.android.nrftoolbox.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:theme="@style/AppTheme.Fullscreen"
            android:name="no.nordicsemi.android.mcp.SplashscreenActivity"
            android:noHistory="true"/>
        <activity
            android:theme="@style/AppTheme.Tutorial"
            android:name="no.nordicsemi.android.mcp.tutorial.TutorialActivity"
            android:noHistory="true"/>
        <activity
            android:theme="@style/AppTheme.Tutorial"
            android:name="no.nordicsemi.android.mcp.ads.FullscreenActivity"
            android:noHistory="true"/>
        <activity
            android:theme="@style/AppTheme.TranslucentStatusBar"
            android:name="no.nordicsemi.android.mcp.MainActivity"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:label="@string/nav_settings"
            android:name="no.nordicsemi.android.mcp.settings.SettingsActivity"/>
        <activity android:name="no.nordicsemi.android.mcp.server.ServerActivity"/>
        <activity
            android:label="@string/nav_favorite"
            android:name="no.nordicsemi.android.mcp.favorite.ManageFavoritesActivity"/>
        <activity
            android:label="@string/nav_definitions"
            android:name="no.nordicsemi.android.mcp.definitions.DefinitionsActivity"/>
        <activity
            android:label="@string/nav_device_information"
            android:name="no.nordicsemi.android.mcp.info.DeviceInfoActivity"/>
        <activity
            android:theme="@style/AppTheme.Overlay"
            android:label="@string/nav_tips_and_tricks"
            android:name="no.nordicsemi.android.mcp.tips.TipsAndTricksActivity"/>
        <activity
            android:theme="@style/DeviceDetailsTheme"
            android:name="no.nordicsemi.android.mcp.scanner.details.DeviceDetailsDialogActivity"/>
        <activity
            android:theme="@style/DeviceDetailsTheme"
            android:name="no.nordicsemi.android.mcp.scanner.timeline.TimelineDialogActivity"/>
        <activity android:name="no.nordicsemi.android.mcp.ble.dfu.NotificationActivity"/>
        <service
            android:name="no.nordicsemi.android.mcp.ble.BluetoothLeService"
            android:enabled="true"/>
        <service
            android:label="@string/dfu_service_title"
            android:name="no.nordicsemi.android.mcp.ble.dfu.DfuService"
            android:exported="true"
            android:foregroundServiceType="location">
            <intent-filter>
                <action android:name="no.nordicsemi.android.action.DFU_UPLOAD"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </service>
        <service
            android:label="@string/app_name_test_service"
            android:name="no.nordicsemi.android.mcp.test.TestService"
            android:exported="true"
            android:foregroundServiceType="location">
            <intent-filter>
                <action android:name="no.nordicsemi.android.action.START_TEST"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </service>
        <provider
            android:name="no.nordicsemi.android.mcp.log.provider.McpLogContentProvider"
            android:exported="true"
            android:authorities="no.nordicsemi.android.mcp.log"
            android:grantUriPermissions="true"/>
        <provider
            android:name="no.nordicsemi.android.mcp.database.provider.DatabaseContentProvider"
            android:exported="false"
            android:authorities="no.nordicsemi.android.mcp"/>
        <activity
            android:theme="@style/AppTheme.Translucent"
            android:label="@string/dfu_service_title"
            android:name="no.nordicsemi.android.mcp.ble.dfu.initiator.DfuInitiatorActivity"
            android:noHistory="true">
            <intent-filter>
                <action android:name="no.nordicsemi.android.action.DFU_UPLOAD"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <service
            android:name="no.nordicsemi.android.support.v18.scanner.ScannerService"
            android:exported="false"/>
        <receiver
            android:name="no.nordicsemi.android.support.v18.scanner.PendingIntentReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="no.nordicsemi.android.support.v18.ACTION_FOUND"/>
            </intent-filter>
        </receiver>
    </application>
</manifest>
